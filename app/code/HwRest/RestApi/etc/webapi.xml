<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/getCategory/:id" method="GET">
        <service class="HwRest\RestApi\Api\CategoryRepositoryInterface" method="getItem" />
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
    <route url="/V1/getCategories" method="GET">
        <service class="HwRest\RestApi\Api\CategoryRepositoryInterface" method="getList" />
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
</routes>
